<div class="relative flex items-center space-x-3 px-6 py-5 focus-within:ring-2 focus-within:ring-inset focus-within:ring-indigo-500 hover:bg-gray-50" id="<%= dom_id(contact) %>">
  <div class="flex-shrink-0">
    <img class="h-10 w-10 rounded-full" src="<%= contact.avatar_url %>" alt="">
  </div>

  <div class="min-w-0 flex-1">
    <%= link_to contact, class: 'focus:outline-none' do %>
      <span class="absolute inset-0" aria-hidden="true"></span>
      <p class="text-sm font-medium text-gray-900"><%= contact.display_name %></p>
      <p class="truncate text-sm text-gray-500"><%= contact.website %></p>
    <% end %>
  </div>
</div>
