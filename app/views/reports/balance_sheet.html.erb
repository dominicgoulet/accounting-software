<div class="rounded-lg bg-white shadow">
  <div class="pt-1 pb-4 px-4 sm:pb-6 lg:pb-8 sm:px-6 lg:px-8">
    <%= render 'reports/query_params', query_parameters_components: @report.query_parameters_components %>
  </div>
</div>

<div class="flex gap-4">
  <div class="rounded-lg bg-white shadow mt-4 w-1/2">
    <table class="rounded-t-lg overflow-hidden min-w-full">
      <% [:asset].each do |k| %>
        <tr class="bg-teal-600 text-white">
          <th scope="col" class="text-xs uppercase font-semibold px-6 text-left py-4">
            <%= k %>
          </th>

          <th scope="col" class="text-xs uppercase font-semibold pr-6 w-28 text-left py-4 text-right">
            Balance
          </th>
        </tr>

        <% @data[k][:lines].each do |line| %>
          <%= render partial: 'balance_sheet_line', locals: { line: line, depth: 1 } %>
        <% end %>

         <tr class="hover:bg-gray-100 font-semibold">
          <td class="whitespace-nowrap py-2 pl-6 text-xs text-gray-900">
            Total <%= k %>
          </td>

          <td class="whitespace-nowrap pr-6 py-2 text-xs text-gray-500 text-right">
            <%= format_amount_condensed(@data[k][:total]) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>

  <div class="rounded-lg bg-white shadow mt-4 w-1/2">
    <table class="rounded-t-lg overflow-hidden min-w-full">
      <% [:liability, :equity].each do |k| %>
        <tr class="bg-teal-600 text-white">
          <th scope="col" class="text-xs uppercase font-semibold px-6 text-left py-4">
            <%= k %>
          </th>

          <th scope="col" class="text-xs uppercase font-semibold pr-6 w-28 text-left py-4 text-right">
            Balance
          </th>
        </tr>

        <% @data[k][:lines].each do |line| %>
          <%= render partial: 'balance_sheet_line', locals: { line: line, depth: 1 } %>
        <% end %>

         <tr class="hover:bg-gray-100 font-semibold">
          <td class="whitespace-nowrap py-2 pl-6 text-xs text-gray-900">
            Total <%= k %>
          </td>

          <td class="whitespace-nowrap pr-6 py-2 text-xs text-gray-500 text-right">
            <%= format_amount_condensed(@data[k][:total]) %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>
