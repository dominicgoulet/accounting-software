<%= form_with model: sales_tax do |form| %>
  <div class="px-4 py-5 sm:p-6">
    <div class="space-y-8 divide-y divide-gray-200">
      <div>
        <div>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Sales tax information</h3>
          <p class="mt-1 text-sm text-gray-500">
             An asset, liabilitie, income, expense, or equity, as represented by individual ledger pages, to which changes in value are chronologically recorded with debit and credit entries.
          </p>
        </div>

        <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
          <div class="sm:col-span-4">
            <%= form.label :name, class: 'form__label' %>

            <div class="mt-1">
              <%= form.text_field :name, class: 'form__input' %>
              <%= form_error_notification(form, :name) %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= form.label :abbreviation, class: 'form__label' %>

            <div class="mt-1">
              <%= form.text_field :abbreviation, class: 'form__input' %>
              <%= form_error_notification(form, :abbreviation) %>
            </div>
          </div>

          <div class="sm:col-span-2">
            <%= form.label :rate, class: 'form__label' %>

            <div class="relative mt-1 rounded-md shadow-sm">
              <%= form.text_field :rate, placeholder: '0.00', class: 'block w-full rounded-md border-gray-300 pr-12 focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm' %>
              <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
                <span class="text-gray-500 sm:text-sm">%</span>
              </div>
              <%= form_error_notification(form, :rate) %>
            </div>
          </div>

          <div class="sm:col-span-4">
            <%= form.label :number, class: 'form__label' %>

            <div class="mt-1">
              <%= form.text_field :number, class: 'form__input' %>
              <%= form_error_notification(form, :number) %>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>

  <div class="modal__footer">
    <%= form.button 'Save', type: 'submit', class: 'button button--primary' %>
    <button type="button" data-action="click->modal-component--modal-component#hideModal" class="button button--neutral">Cancel</button>
  </div>
<% end %>
