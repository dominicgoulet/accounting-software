<div class="mt-10 divide-y divide-gray-200" id="<%= dom_id(organization) %>">
  <div class="space-y-1">
    <h3 class="text-lg font-medium leading-6 text-gray-900">Organization</h3>
    <p class="max-w-2xl text-sm text-gray-500">This information will be displayed publicly so be careful what you share.</p>
  </div>

  <div class="mt-6">
    <dl class="divide-y divide-gray-200">
      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
        <dt class="text-sm font-medium text-gray-500">Name</dt>
        <dd class="mt-1 flex text-sm text-gray-900 sm:col-span-2 sm:mt-0">
          <span class="flex-grow"><%= organization.name %></span>

          <span class="ml-4 flex-shrink-0">
            <%= link_to edit_organization_path(organization), data: { turbo_frame: 'modal' }, class: 'rounded-md bg-white font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2' do %>
              Edit
            <% end %>
          </span>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4 sm:py-5">
        <dt class="text-sm font-medium text-gray-500">Website</dt>
        <dd class="mt-1 flex text-sm text-gray-900 sm:col-span-2 sm:mt-0">
          <span class="flex-grow"><%= organization.website %></span>

          <span class="ml-4 flex-shrink-0">
            <%= link_to edit_organization_path(organization), data: { turbo_frame: 'modal' }, class: 'rounded-md bg-white font-medium text-indigo-600 hover:text-indigo-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2' do %>
              Edit
            <% end %>
          </span>
        </dd>
      </div>
    </dl>
  </div>
</div>
