<%= content_for :page_title do %>
  Launchpad
<% end %>

<ul role="list" class="grid grid-cols-1 gap-6 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
  <% current_user.organizations.order(:name).each do |org| %>
  <li class="col-span-1 flex flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
    <div class="flex flex-1 flex-col p-8">
      <%= inline_svg_tag 'logo-mono', class: 'mx-auto h-32 w-32 flex-shrink-0 rounded-full fill-teal-500' %>
      <h3 class="mt-6 text-sm font-medium text-gray-900"><%= org.name %></h3>
      <dl class="mt-1 flex flex-grow flex-col justify-between">
        <dt class="sr-only">Title</dt>
        <dd class="text-sm text-gray-500">Something useful</dd>
        <dt class="sr-only">Role</dt>
        <dd class="mt-3">
          <span class="rounded-full bg-green-100 px-2 py-1 text-xs font-medium text-green-800">Admin</span>
        </dd>
      </dl>
    </div>

    <div>
      <div class="-mt-px flex divide-x divide-gray-200">
        <div class="flex w-0 flex-1">
          <%= link_to sign_in_organization_path(org), data: { 'turbo-method': :patch }, class: 'relative -mr-px inline-flex w-0 flex-1 items-center justify-center rounded-bl-lg border border-transparent py-4 text-sm font-medium text-gray-700 hover:text-gray-500' do %>
            <!-- Heroicon name: mini/envelope -->
            <%= inline_svg_tag 'outline/arrow-right-on-rectangle', class: 'h-5 w-5 text-gray-400' %>
            <span class="ml-3">Switch</span>
          <% end %>
        </div>
      </div>
    </div>
  </li>
  <% end %>

  <li class="col-span-1 flex px-6 flex-col divide-y divide-gray-200 rounded-lg bg-white text-center shadow">
    <%= link_to new_organization_path, method: :get, class: 'relative my-auto block w-full rounded-lg border-2 border-dashed border-gray-300 p-12 text-center hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2', data: { turbo_frame: 'modal' } do %>
      <%= inline_svg_tag 'outline/building-office', class: 'mx-auto h-12 w-12 text-gray-400' %>
      <span class="mt-2 block text-sm font-medium text-gray-900">Create a new organization</span>
    <% end %>
  </li>
</ul>
