<%# The container tag
  - available local variables
    current_page:  a page object for the currently displayed page
    total_pages:   total number of pages
    per_page:      number of items to fetch per page
    remote:        data-remote
    paginator:     the paginator that renders the pagination tags inside
-%>
<%= paginator.render do -%>
  <nav class="flex items-center justify-between px-4 pb-4" class="pagination" role="navigation" aria-label="pager">
    <div class="-mt-px flex w-0 flex-1 justify-start gap-3">
      <%= first_page_tag %>
      <%= prev_page_tag %>
    </div>

    <div class="hidden md:-mt-px md:flex">
      <% each_page do |page| -%>
        <% if page.display_tag? -%>
          <%= page_tag page %>
        <% elsif !page.was_truncated? -%>
          <%= gap_tag %>
        <% end -%>
      <% end -%>
    </div>

    <div class="-mt-px flex w-0 flex-1 justify-end gap-3">
        <%= next_page_tag %>
        <%= last_page_tag %>
    </div>
  </nav>
<% end -%>
