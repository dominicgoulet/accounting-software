<div class="nested-form-wrapper sm:col-span-6 grid grid-cols-1 gap-y-4 gap-x-4 sm:grid-cols-12" data-new-record="<%= form.object.new_record? %>"<% if form.object.new_record? %> data-action="focusin->nested-form#add:once"<% end %>>

  <div class="sm:col-span-3">
    <%= form.label :field, class: 'block sm:hidden text-sm font-medium text-gray-700' %>

    <div class="mt-1">
      <%= form.select :field, BankTransactionRuleCondition.field.values.map { |x| [x.capitalize, x] }, {}, class: 'form__input' %>
      <%= form_error_notification(form, :field) %>
    </div>
  </div>

  <div class="sm:col-span-2">
    <%= form.label :condition, class: 'block sm:hidden text-sm font-medium text-gray-700' %>

    <div class="mt-1">
      <%= form.select :condition, BankTransactionRuleCondition.condition.values.map { |x| [x.capitalize, x] }, {}, class: 'form__input' %>
      <%= form_error_notification(form, :condition) %>
    </div>
  </div>

  <div class="sm:col-span-6">
    <%= form.label :value, class: 'block sm:hidden text-sm font-medium text-gray-700' %>

    <div class="mt-1">
      <%= form.text_field :value, class: 'form__input'  %>
      <%= form_error_notification(form, :value) %>
    </div>
  </div>

  <div class="sm:col-span-1">
    <div class="relative mt-1 flex justify-end">
      <button type="button" data-action="nested-form#remove" class="mt-3 inline-flex w-full justify-center rounded-md border border-gray-300 bg-white px-4 py-2 text-base font-medium text-gray-700 shadow-sm hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 sm:mt-0 sm:w-auto sm:text-sm">
        <%= inline_svg_tag 'mini/x-mark', class: 'w-5 h-5 mx-auto' %>
      </button>
    </div>
  </div>

  <%= form.hidden_field :_destroy %>

</div>
