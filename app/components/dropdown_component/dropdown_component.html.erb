<div class="relative ml-3" data-controller="dropdown-component--dropdown-component">
  <div>
    <button type="button" class="<%= css_classes %>" id="user-menu-button" aria-expanded="false" aria-haspopup="true" data-action="focus->dropdown-component--dropdown-component#show blur->dropdown-component--dropdown-component#hide touchstart->dropdown-component--dropdown-component#show touchend->dropdown-component--dropdown-component#hide click@window->dropdown-component--dropdown-component#hide" data-dropdown-component--dropdown-component-target="dropdownToggle">
      <span class="sr-only">Open <%= @title %></span>
      <%= toggle %>
    </button>
  </div>

  <div class="hidden absolute right-0 z-10 mt-2 w-48 origin-top-right rounded-md bg-white py-1 shadow-lg ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1" data-dropdown-component--dropdown-component-target="dropdownContent">
    <%= links %>
  </div>
</div>
